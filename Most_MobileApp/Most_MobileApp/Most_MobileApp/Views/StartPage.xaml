<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Most_MobileApp.Views.StartPage"
			 BackgroundImage="background0.png" AbsoluteLayout.LayoutFlags="SizeProportional">
	<ContentPage.Content>
		<StackLayout x:Name="MasterLayout">
			<StackLayout x:Name="LogoMost" VerticalOptions="CenterAndExpand">
				<Image x:Name="MostIcon" Source="logo_MOST_2.png" Margin="0,15,0,20" />
			</StackLayout>

			<StackLayout x:Name="StartButtons" VerticalOptions="FillAndExpand" Margin="0,20,0,0">
				<Button x:Name="EnterButton" VerticalOptions="Center" CornerRadius="2" Text="Wejdź do MOSTu" Font="Assets/Fonts/LATO-BLACK.TTF, 12" Opacity="0.7" Clicked="EntryOffline"/>
			</StackLayout>

		</StackLayout>
	</ContentPage.Content>
</ContentPage>